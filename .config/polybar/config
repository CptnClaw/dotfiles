
[colors]
secondary = #ffffff
background = #bb212121
opaquebackapprox = #1f2937
foreground = #dddddd

[bar/fullbar]
monitor 		= 
width			= 100%
height			= 25
radius			= 0
line-size		= 0
bottom			= false
fixed-center 	= false

font-0 = "Ubuntu:size=10;2"
font-1 = "Feather:size=10;2"

override-redirect = false
;offset-x = 1%
;offset-y = 5
screenchange-reload      = true
throttle-output          = 5
throttle-output-for      = 10
throttle-input-for       = 30
padding-left             = 1
padding-right            = 2
module-margin-left       = 2
module-margin-right      = 2

background = ${colors.background}
foreground = ${colors.foreground}
modules-left = i3  
modules-center = title
modules-right = xkeyboard2 networkspeedup networkspeeddown memory cpu pavolume networkmanager zipcode date battery
separator = 

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;


[module/memory]
type = internal/memory
internal = 1
format = <label>
label =   %percentage_used:2%%
format-underline = ${colors.secondary}

[module/cpu]
type = internal/cpu
internal = 0.5
format =   <label>%
label = %percentage%
format-underline = ${colors.secondary}

[module/date]
type = internal/date
interval = 5
date = " %Y-%m-%d"
time = %H:%M
label =  %date%   %time%
;label =  %time%
format-padding = 1
format-underline = ${colors.secondary}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
poll-interval = 2
full-at = 100

format-discharging =  <label-discharging>%
format-full =  100%
format-charging =  <label-charging>% 
label-charging = %percentage%
label-discharging = %percentage%
label-full = 
time-format = %H:%M
format-underline = ${colors.secondary}

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5
label-connected =  %essid% 
label-disconnected = 


[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/scripts/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down
format-underline = ${colors.secondary}


[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = "  "
label-connected = %downspeed:9%
format-disconnected = <label-disconnected>
label-disconnected = not connected
format-padding = 1

[module/mpd]
type = internal/mpd
interval = 2
format-online = <toggle> <label-song> <icon-next>
label-song = %artist% - %title%
label-song-maxlen = 20
label-song-ellipsis = true
label-online = "MPD is offline"
icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
format-padding = 2

[module/i3]
type = internal/i3
pin-workspace = false
index-sort = true

enable-click = true
