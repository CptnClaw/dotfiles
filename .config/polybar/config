
[colors]
secondary = #ffffff
background = #bb212121
opaquebackapprox = #1f2937
foreground = #dddddd

[bar/fullbar]
monitor 		= 
width			= 100%
height			= 25
radius			= 0
line-size		= 0
bottom			= false
fixed-center 	= false

font-0 = "DejaVu Sans Mono:size=10;2"
font-1 = "Feather:size=10;2"
; Font icons from:
; https://rawgit.com/luizbills/feather-icon-font/master/demo/index.html

override-redirect = false
;offset-x = 1%
;offset-y = 5
screenchange-reload      = true
throttle-output          = 5
throttle-output-for      = 10
throttle-input-for       = 30
padding-left             = 1
padding-right            = 1
module-margin-left       = 1
module-margin-right      = 1

background = ${colors.background}
foreground = ${colors.foreground}
modules-left = i3  
modules-center = title
modules-right = xkeyboard2 networkspeedup networkspeeddown memory cpu pavolume networkmanager zipcode date battery
separator =  

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;


[module/memory]
type = internal/memory
interval = 2
format = <label>
label =  %percentage_used:02%%
format-underline = ${colors.secondary}

[module/cpu]
type = internal/cpu
interval = 2
format =  <label>%
label = %percentage:02%
format-underline = ${colors.secondary}

[module/date]
type = internal/date
interval = 5
date = "%Y-%m-%d"
time = %H:%M
label =  %date%   %time%
;label =  %time%
format-padding = 1
format-underline = ${colors.secondary}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
poll-interval = 2
full-at = 100

format-discharging =  <label-discharging>%
format-full =  100%
format-charging =  <label-charging>% 
label-charging = %percentage%
label-discharging = %percentage%
label-full = 
time-format = %H:%M
format-underline = ${colors.secondary}

[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/scripts/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down
format-underline = ${colors.secondary}

[module/i3]
type = internal/i3
pin-workspace = false
index-sort = true

enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
format = <label-state> <label-mode>
label-focused = %name%
label-focused-padding = 1
label-focused-background = "#82aaff"
label-focused-foreground = "#212121"

label-unfocused = %name%
label-unfocused-padding = 1
label-visible = %name%
label-visible-padding = 1
label-mode = %mode%

;Material theme
label-mode-background = "#82aaff"
label-mode-foreground = "#212121"
label-mode-padding = 1
label-urgent = %name%
label-urgent-padding = 1


[module/title]
type = internal/xwindow
format = <label>
label = %title%
label-maxlen = 60

[module/separator]
type = custom/text
content =  
content-padding = 1

[module/xkeyboard2]
;https://github.com/jaagr/polybar/wiki/Module:-xkeyboard
type = internal/xkeyboard
blacklist-0 = num lock
;blacklist-1 = caps lock
format-underline = ${colors.secondary}
